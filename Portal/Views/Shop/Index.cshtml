@model IEnumerable<Data.Data.Shop.Product>
@{
    ViewData["Title"] = "Sklep internetowy";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col l10">
                @foreach (var item in Model)
                {
                    <a class="shop-item waves-effect waves-dark" id="btn-blog" asp-controller="Shop"
                   asp-action="Details" asp-route-id="@item.Id">
                        <div class="col s6 m3 center">
                            <img class="shop-picture" src="~/lib/img/shop/@item.Picture.First().Link" />
                            <p>@item.Name</p>
                            @if(item.Discount)
                            {
                                <s>@item.Price.ToString("c")</s>
                                <p style="color: red;">@item.DiscountPrice.ToString("c")</p>
                            }
                            else
                            {
                                <p>@item.Price.ToString("c")</p>
                            }
                            <a class="btn waves-effect waves-light" id="btn-add-cart" asp-controller="Cart"
                           asp-action="AddToCart" asp-route-id="@item.Id"><i class="material-icons">add_shopping_cart</i>Dodaj do koszyka</a>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>