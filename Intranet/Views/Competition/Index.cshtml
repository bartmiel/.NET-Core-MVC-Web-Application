@model IEnumerable<Data.Data.Portal.Competition>

@{
    ViewData["Title"] = "Zawody -> Lista wydarzeń";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="pb-0">
    <div class="container-fluid">

        <!-- Competition-->
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="card-body p-4">
                    <div class="row align-items-center gx-lg-5 gy-3">
                        <div class="col-lg-2 border-lg-end">
                            <div class="ms-1">
                                <span class="text-gray-700 mb-0">@item.Date.ToString("M")</span>
                                <p class="text-gray-500">@System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(item.Date.ToString("dddd").ToLower())</p>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <img class="img-fluid shadow-sm" src="~/lib/img/project-1.jpg" alt="..." width="50">
                                    <div class="ms-2">
                                        <h2 class="h2 text-gray-700 mb-0">@item.Name</h2><p class="text-gray-500">@item.City</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="d-flex align-items-center">
                                <p class="d-flex mb-0 text-gray-600 text-sm d-flex align-items-center flex-shrink-0"><i class="far fa-clock me-1"></i>@item.Date.ToString("hh:mm")</p>
                                <p class="d-flex mb-0 mx-3 text-gray-600 text-sm d-flex align-items-center flex-shrink-0"><i class="far fa-comment me-1"></i>20</p>
                                <div class="progress w-100" style="height: 5px; max-width: 15rem">
                                    <div class="progress-bar bg-red" role="progressbar" style="width: 45%; height: 10px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 border-lg-start">
                            <div class="d-flex align-items-center">
                                <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                                <a class="btn btn-primary me-2" asp-action="Details" asp-route-id="@item.Id">Otwórz</a>
                                <a class="btn btn-danger me-2" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
































