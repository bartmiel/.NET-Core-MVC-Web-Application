@model IEnumerable<Data.Data.CMS.Blog>

@{
    ViewData["Title"] = "Blog -> Wszystkie wpisy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="pb-0">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-2 col-lg-4 p-5">
                    <div class="card">
                        <img class="card-img-top" src="~/lib/img/blog/@item.Picture">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Zobacz</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edytuj</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Usuń</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>